<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/janelapopup"
    android:weightSum="1">
    <ImageView
        android:layout_width="175dp"
        android:layout_height="193dp"
        android:layout_gravity="center"
        android:src="@drawable/negado"
        android:layout_weight="0.17" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        style="@style/LetrasCinza"
        android:text="Acesso Negado!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="160dp"
        style="@style/LetrasCinza"
        android:text="Sem saldo de internet.Faça uma doação a alguém."
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp" />
    <Button
        android:id="@+id/bt"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/doar"
        android:layout_marginLeft="90dp" />
</LinearLayout>