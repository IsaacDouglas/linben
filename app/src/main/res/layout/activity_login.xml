<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="true"
    android:contextClickable="true"
    android:focusableInTouchMode="false"
    android:background="@drawable/menu">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="400px"
        android:layout_height="350px"
        android:src="@drawable/linben_temp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />



    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:background="@color/color"
        android:ems="10"
        android:textColor="@color/colorMain"
        android:textAlignment="center"
        android:id="@+id/email"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Insira seu e-mail"
        android:textColorHint="@color/colorMain"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@color/color"
        android:ems="10"
        android:id="@+id/senha"
        android:textAlignment="center"
        android:textColor="@color/colorMain"
        android:singleLine="false"
        android:layout_above="@+id/entrar"
        android:layout_alignStart="@+id/email"
        android:textColorHint="@color/colorMain"
        android:hint="Insira sua senha" />


    <Button
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:background="@drawable/entrarred"
        android:id="@+id/entrar"
        android:layout_above="@+id/bt_esqueci_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bt_esqueci_senha"
        android:layout_height="30dp"
        android:layout_width="130dp"
        android:background="@color/colorMain"
        android:text="Esqueci a senha"
        android:textSize="12dp"

        android:layout_above="@+id/bt_novo_usuario"
        android:layout_alignStart="@+id/entrar"
        android:layout_marginBottom="28dp" />

    <Button
        android:id="@+id/bt_novo_usuario"
        android:layout_height="25dp"
        android:layout_width="100dp"
        android:background="@color/colorMain"
        android:text="Novo usuÃ¡rio"
        android:textSize="12dp"
        style="@style/LetrasCinza"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
