<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/janelapopup"
    android:weightSum="1">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:src="@drawable/fecharjanela"
        android:layout_weight="0.17"
        android:id="@+id/fechar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fotoperfilvideo"
        android:background="@drawable/fotoperfilvideo"
        android:layout_weight="0.17"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/colorCinza"
        android:text="Obrigado!"
        style="@style/LetrasCinza"
        android:textStyle="bold"
        android:textSize="40dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="100dp"
        style="@style/LetrasCinza"
        android:text="Doação registrada com sucesso!"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6" />
    <Button
        android:id="@+id/bt"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/acessowifibranco"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
</RelativeLayout>
