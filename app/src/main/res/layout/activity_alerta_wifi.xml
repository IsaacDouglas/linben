<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/janelapopup"
    android:weightSum="1">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:src="@drawable/fecharjanela"
        android:layout_weight="0.17"
        android:id="@+id/fechar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="193dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wifi"
        android:layout_weight="0.17"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/LetrasCinza"
        android:text="Acesso Liberado!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="160dp"
        style="@style/LetrasCinza"
        android:text="Você tem 20 minutos de internet grátis!"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6" />
    <Button
        android:id="@+id/bt"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/pginicial"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
</RelativeLayout>