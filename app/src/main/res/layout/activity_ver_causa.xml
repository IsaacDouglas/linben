<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samsung.linben.VerCausaActivity"
    android:background="@color/color">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_weight="1.06"
        android:layout_toEndOf="@+id/icon"
        android:layout_alignBottom="@+id/icon"
        android:id="@+id/relativeLayout">



        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            style="@style/LetrasVinho"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade"
            android:layout_marginLeft="10dp"

            android:layout_below="@+id/sangue"
            style="@style/LetrasCinza"
            android:layout_alignStart="@+id/item"
            android:layout_toStartOf="@+id/sangue"
            android:layout_above="@+id/button2"
            android:layout_marginBottom="10dp"
            android:layout_alignEnd="@+id/sangue" />

        <TextView
            android:id="@+id/sangue"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:text="A+"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/item"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="63dp"
            style="@style/LetrasVinho"/>


    </RelativeLayout>

    <VideoView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/videoView"
        android:layout_marginTop="49dp"
        android:clickable="false"
        android:layout_below="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="New Text"
        android:id="@+id/textView8"
        android:layout_below="@+id/videoView"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginTop="15dp" />
</RelativeLayout>
