<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nome"
        android:background="@drawable/topo"
        android:layout_alignParentTop="false" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/naousa"
        style="@style/LetrasPreta"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/nome"
        android:layout_marginTop="48dp" />
    <TextView

        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Amanda Carla"
        style="@style/LetrasCinza"
        android:textSize="22dp"
        android:id="@+id/nome"
        android:textStyle="bold"
        android:layout_alignTop="@+id/naousa"
        android:layout_toEndOf="@+id/adcfoto" />
    <Button
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/camera"
        android:background="@drawable/cameranewphoto"
        android:layout_above="@+id/adcfoto"
        android:layout_alignStart="@+id/cxsobre" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Feminino"
        style="@style/LetrasCinza"
        android:textSize="20dp"
        android:id="@+id/sexo"
        android:textStyle="italic"
        android:layout_below="@+id/nome"
        android:layout_toEndOf="@+id/estado" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Adicionar               Foto"
        android:textSize="13dp"
        style="@style/LetrasCinza"
        android:id="@+id/adcfoto"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/sexo"
        android:layout_alignBottom="@+id/sexo"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:text="A+"
        style="@style/LetrasVinho"
        android:textSize="30dp"
        android:id="@+id/sangue"
        android:layout_alignBottom="@+id/adcfoto"
        android:layout_toEndOf="@+id/naousa" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Sobre vocÃª"
        android:textSize="17dp"
        style="@style/LetrasCinza"
        android:id="@+id/sobre"
        android:textAlignment="center"
        android:layout_below="@+id/adcfoto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/cxsobre"
        android:background="#94cdcdcd"
        android:layout_below="@+id/sobre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Onde Mora?"
        android:textSize="17dp"
        style="@style/LetrasCinza"
        android:id="@+id/ondemoratx"
        android:textAlignment="center"
        android:layout_below="@+id/cxsobre"
        android:layout_alignStart="@+id/cxsobre" />

    <Spinner
        android:id="@+id/estado"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#94cdcdcd"
        android:layout_below="@+id/ondemoratx"
        android:layout_alignStart="@+id/ondemoratx">
    </Spinner>
    <Spinner
        android:id="@+id/cidade"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#94cdcdcd"
        android:layout_below="@+id/ondemoratx"
        android:layout_alignEnd="@+id/cxsobre">
    </Spinner>

    <Button
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:id="@+id/voltar"
        android:src="@drawable/voltarbranco"
        android:background="@drawable/voltarbranco"
        android:layout_alignTop="@+id/concluir"
        android:layout_alignStart="@+id/ondemoratx" />
    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/concluirbranco"
        android:background="@drawable/concluirbranco"
        android:id="@+id/concluir"
        style="@style/MyStyle1"
        android:layout_below="@+id/cidade"
        android:layout_alignEnd="@+id/cidade"
        android:layout_marginTop="70dp"
        android:longClickable="false" />






</RelativeLayout>